<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="team20.flashbackmusic.MainActivity"
    tools:showIn="@layout/activity_main">

    <ListView
        android:id="@+id/songList"
        android:layout_width="368dp"
        android:layout_height="220dp"
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/nowPlaying"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Current playing song and Artist"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/songList"
        app:layout_constraintRight_toRightOf="@id/songList"
        app:layout_constraintTop_toBottomOf="@id/songList"/>

    <TextView
        android:id="@+id/playingLoc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="20dp"
        android:textSize="20dp"
        android:text="Show Location"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/nowPlaying"
        app:layout_constraintRight_toRightOf="@id/nowPlaying"
        app:layout_constraintTop_toBottomOf="@id/nowPlaying"/>

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="20dp"
        android:textSize="20dp"
        android:text="Song duration"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/playingLoc"
        app:layout_constraintRight_toRightOf="@id/playingLoc"
        app:layout_constraintTop_toBottomOf="@id/playingLoc"/>

    <Button
        android:id="@+id/fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="Flashback Button here"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/playingLoc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <GridView
        android:id="@+id/albumList"
        android:layout_width="368dp"
        android:layout_height="134dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</android.support.constraint.ConstraintLayout>
